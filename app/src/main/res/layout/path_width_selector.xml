<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/small_width_iv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@color/light_gray"
        android:contentDescription="minWidth"
        android:padding="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/path_width_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/medium_width_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
       />

    <ImageView
        android:id="@+id/medium_width_iv"
        android:background="@color/light_gray"
        android:contentDescription="mediumWidth"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/path_width_bg"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />



    <ImageView
        android:id="@+id/large_width_iv"
        android:background="@color/light_gray"
        android:contentDescription="largeWidth"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/path_width_bg"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/medium_width_iv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>